<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="#FFFFFF"
    android:textAlignment="viewEnd"
    tools:context=".MainActivity">


    <androidx.constraintlayout.widget.ConstraintLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp">


        <TextView
            android:id="@+id/CalculatorText"
            android:layout_width="match_parent"

            app:layout_constraintHeight_percent="0.11"
            android:layout_height="0dp"




            android:background="#212121"
            android:gravity="end"
            android:text="Calculator..."
            android:textColor="#7E7D7D"
            android:textSize="50sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:layout_margin="8dp"
            android:id="@+id/history"
            android:layout_width="match_parent"
            app:layout_constraintHeight_percent="0.08"
            android:layout_height="0dp"
            android:layout_marginBottom="10dp"
            android:background="#161616"
            android:gravity="end"




            android:textColor="#4B4A4A"
            android:textSize="18sp"
            app:layout_constraintBottom_toTopOf="@+id/button7"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/CalculatorText" />

        <Button
            android:id="@+id/button7"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="8dp"


            android:layout_marginTop="10dp"
            android:backgroundTint="#949494"
            android:text="7"
            android:textColor="@color/white"
            android:textSize="25sp"

            app:layout_constraintDimensionRatio="1:1"


            app:layout_constraintStart_toStartOf="parent"

            app:layout_constraintTop_toBottomOf="@id/history"

            app:layout_constraintWidth_percent="0.22"

            />

        <Button
            android:id="@+id/button8"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/white"



            android:backgroundTint="#949494"


            android:text="8"
            android:textSize="25sp"

            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintStart_toEndOf="@id/button7"


            app:layout_constraintTop_toTopOf="@id/button7"


            app:layout_constraintWidth_percent="0.22"


            />


        <Button
            android:id="@+id/button9"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:textColor="@color/white"


            android:layout_marginLeft="10dp"
            android:backgroundTint="#949494"


            android:text="9"
            android:textSize="25sp"


            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintStart_toEndOf="@id/button8"


            app:layout_constraintTop_toTopOf="@id/button7"


            app:layout_constraintWidth_percent="0.22"


            />

        <Button
            android:id="@+id/buttonPrc"
            android:layout_width="0dp"
            android:layout_height="0dp"

            android:layout_marginLeft="10dp"
            android:backgroundTint="#799E65"
            android:textColor="@color/white"


            android:text=":"
            android:textSize="25sp"


            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintEnd_toEndOf="parent"


            app:layout_constraintStart_toEndOf="@id/button9"
            app:layout_constraintTop_toTopOf="@id/button7"


            app:layout_constraintWidth_percent="0.22"

            />
        <!--        rzad 2-->

        <Button
            android:id="@+id/button4"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"


            android:backgroundTint="#949494"
            android:text="4"
            android:textColor="@color/white"
            android:textSize="25sp"
            app:layout_constraintDimensionRatio="1:1"

            app:layout_constraintStart_toStartOf="parent"


            app:layout_constraintTop_toBottomOf="@id/button7"

            app:layout_constraintWidth_percent="0.22" />

        <Button
            android:id="@+id/button5"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:textColor="@color/white"

            android:layout_marginLeft="10dp"
            android:backgroundTint="#949494"


            android:text="5"
            android:textSize="25sp"

            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintStart_toEndOf="@id/button4"


            app:layout_constraintTop_toTopOf="@id/button4"


            app:layout_constraintWidth_percent="0.22"


            />

        <Button
            android:id="@+id/button6"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:textColor="@color/white"

            android:layout_marginLeft="10dp"
            android:backgroundTint="#949494"


            android:text="6"
            android:textSize="25sp"

            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintStart_toEndOf="@id/button5"


            app:layout_constraintTop_toTopOf="@id/button4"


            app:layout_constraintWidth_percent="0.22"


            />


        <Button
            android:id="@+id/buttonMn"
            android:layout_width="0dp"
            android:layout_height="0dp"


            android:layout_marginLeft="10dp"
            android:backgroundTint="#799E65"
            android:textColor="@color/white"


            android:text="*"
            android:textSize="25sp"

            app:layout_constraintDimensionRatio="1:1"

            app:layout_constraintEnd_toEndOf="parent"

            app:layout_constraintStart_toEndOf="@id/button6"


            app:layout_constraintTop_toTopOf="@id/button4"


            app:layout_constraintWidth_percent="0.22"


            />

        <!--        rzad 3-->

        <Button
            android:id="@+id/button1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"


            android:backgroundTint="#949494"
            android:text="1"
            android:textColor="@color/white"
            android:textSize="25sp"
            app:layout_constraintDimensionRatio="1:1"

            app:layout_constraintStart_toStartOf="parent"


            app:layout_constraintTop_toBottomOf="@id/button4"

            app:layout_constraintWidth_percent="0.22" />

        <Button
            android:id="@+id/button2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:textColor="@color/white"


            android:layout_marginLeft="10dp"
            android:backgroundTint="#949494"


            android:text="2"
            android:textSize="25sp"

            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintStart_toEndOf="@id/button1"


            app:layout_constraintTop_toTopOf="@id/button1"


            app:layout_constraintWidth_percent="0.22"


            />

        <Button
            android:id="@+id/button3"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:textColor="@color/white"


            android:layout_marginLeft="10dp"
            android:backgroundTint="#949494"


            android:text="6"
            android:textSize="25sp"

            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintStart_toEndOf="@id/button2"


            app:layout_constraintTop_toTopOf="@id/button1"


            app:layout_constraintWidth_percent="0.22"


            />


        <Button
            android:id="@+id/buttonMinus"
            android:layout_width="0dp"
            android:layout_height="0dp"

            android:layout_marginLeft="10dp"
            android:backgroundTint="#799E65"
            android:textColor="@color/white"


            android:text="-"
            android:textSize="25sp"

            app:layout_constraintDimensionRatio="1:1"

            app:layout_constraintEnd_toEndOf="parent"

            app:layout_constraintStart_toEndOf="@id/button3"


            app:layout_constraintTop_toTopOf="@id/button1"


            app:layout_constraintWidth_percent="0.22"


            />


        <!--        rzad 4 -->


        <Button
            android:id="@+id/buttonDel"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"


            android:backgroundTint="#A02832"
            android:text="âŒ«"
            android:textColor="@color/white"
            android:textSize="25sp"
            app:layout_constraintDimensionRatio="1:1"

            app:layout_constraintStart_toStartOf="parent"


            app:layout_constraintTop_toBottomOf="@id/button1"



            app:layout_constraintWidth_percent="0.22"
            android:width="32dp"
            />


        <Button
            android:id="@+id/button0"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:textColor="@color/white"


            android:layout_marginLeft="10dp"
            android:backgroundTint="#949494"


            android:text="0"
            android:textSize="25sp"

            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintStart_toEndOf="@id/buttonDel"


            app:layout_constraintTop_toTopOf="@id/buttonDel"


            app:layout_constraintWidth_percent="0.22"


            />

        <Button
            android:id="@+id/buttonKropka"
            android:layout_width="0dp"
            android:layout_height="0dp"


            android:layout_marginLeft="10dp"
            android:backgroundTint="#949494"
            android:textColor="@color/white"


            android:text="."
            android:textSize="25sp"

            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintStart_toEndOf="@id/button0"


            app:layout_constraintTop_toTopOf="@id/buttonDel"


            app:layout_constraintWidth_percent="0.22"


            />


        <Button
            android:id="@+id/buttonPlus"
            android:layout_width="0dp"
            android:layout_height="0dp"


            android:layout_marginLeft="10dp"
            android:backgroundTint="#799E65"
            android:textColor="@color/white"


            android:text="+"
            android:textSize="25sp"

            app:layout_constraintDimensionRatio="1:1"

            app:layout_constraintEnd_toEndOf="parent"

            app:layout_constraintStart_toEndOf="@id/buttonKropka"


            app:layout_constraintTop_toTopOf="@id/buttonDel"


            app:layout_constraintWidth_percent="0.22"


            />

        <!--        rowne-->


        <Button
            android:id="@+id/buttonRowne"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"


            android:width="32dp"
            android:backgroundTint="#85C566"
            android:text="="
            android:textColor="@color/white"
            android:textSize="35sp"

            app:layout_constraintDimensionRatio="1:1"


            app:layout_constraintHeight="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/buttonDel"


            app:layout_constraintWidth="match_parent"
            app:layout_constraintWidth_percent="0.22" />


        <Button
            android:id="@+id/buttonClearHistory"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"


            android:width="32dp"
            android:backgroundTint="#A02832"
            android:text="Clear history"
            android:textColor="@color/white"
            android:textSize="15sp"


            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/buttonRowne"


            app:layout_constraintWidth_percent="0.22" />


        <Button
            android:id="@+id/buttonClear"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"


            android:width="32dp"
            android:backgroundTint="#A02832"
            android:text="Clear Displayy"
            android:textColor="@color/white"
            android:textSize="15sp"


            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/buttonRowne"


            app:layout_constraintWidth_percent="0.22" />









    </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.constraintlayout.widget.ConstraintLayout>